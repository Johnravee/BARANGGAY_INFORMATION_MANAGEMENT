<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="/CSS/businesspermit.css" />

  </head>
  <body>
    <div class="box">
      <a href="/brrs">X</a>
     </div>
    <section class="container">
      <header>BUSINESS PERMIT</header>
      <form action="/permit" class="form" method="post" enctype="multipart/form-data">
        <div class="input-box">
          <label>Owners Name</label>
          <input type="text" name="owner" required />
        </div>
        <div class="input-box">
          <label>Owners Address</label>
          <input type="text" name="owneraddress" required />
        </div>
        <div class="input-box">
            <label>Business Name</label>
            <input type="text" name="businessname" required />
          </div>
        <div class="input-box">
            <label> Business Address</label>
            <input type="text" name="businessaddress" required />
        </div>
        <div class="input-box">
            <label>Business Type</label>
            <input type="text" name="businesstype" required />
          </div>
          <div class="input-box">
            <label>Contact Number</label>
            <input type="number" name="contactno" required />
          </div>
        <div class="property-box">
          <h3>Property</h3>
          <div class="property-option">
            <div class="property">
              <input type="radio" id="check-male" name="property" checked />
              <label for="check-male">Owned</label>
            </div>
            <div class="property">
              <input type="radio" id="check-female" name="property" />
              <label for="check-female">Rented</label>
            </div>
            <div class="property">
              <input type="radio" id="check-other" name="property" />
              <label for="check-other">Lessor</label>
            </div>
          </div>
        </div>
            <div class="input-box">
                <label>DTI/SEC Reg No.</label>
                <input type="text" name="dtinum" required />
              </div>
                <label>Upload Photo</label>
                <div class="upload">
                  <label for="uploadfile">Upload Valid ID</label>
                  <input type="file" id="uploadfile" name="validID" required />
              </div>
              <label for="govfile">Upload Government ID</label>
              <div class="upload">
                  <label for="govfile">Upload File</label>
                  <input type="file" id="govfile" name="govid" required />
              </div>
        <button type="submit">Submit</button>
      </form>
    </section>
  </body>
</html>